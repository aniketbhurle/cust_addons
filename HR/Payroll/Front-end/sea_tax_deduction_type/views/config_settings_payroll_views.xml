<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="hr_payroll.res_config_settings_view_form" model="ir.ui.view">
          <field name="name">res.config.settings.view.form.inherit.hr.payroll</field>
          <field name="model">res.config.settings</field>
          <field name="priority" eval="45"/>
          <field name="inherit_id" ref="base.res_config_settings_view_form"/>
          <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
              <div class="app_settings_block" data-string="Payroll" string="Payroll" data-key="hr_payroll" groups="hr_payroll.group_hr_payroll_manager">

                  <h2>Standard Taxes</h2>
                  <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                      <div class="o_setting_right_pane">

                        <div class= "o_row">
                          <label for="standard_deduction"/>
                          <field name="standard_deduction"/>
                        </div>

                        <div class= "o_row">
                          <label for="national_pension_scheme"/>
                          <field name="national_pension_scheme"/>
                        </div>

                        <div class= "o_row">
                          <label for="education_cess"/>
                          <field name="education_cess"/>
                        </div>

                        <div class= "o_row">
                          <label for="sur_charge"/>
                          <field name="sur_charge"/>
                        </div>

                         <div class= "o_row">
                          <label for="flexible_pay"/>
                          <field name="flexible_pay"/>
                        </div>

                         <div class= "o_row">
                          <label for="employee_pf"/>
                          <field name="employee_pf"/>
                        </div>

                        <div class= "o_row">
                          <label for="employers_pf"/>
                          <field name="employers_pf"/>
                        </div>

                        <div class= "o_row">
                          <label for="employee_esi"/>
                          <field name="employee_esi"/>
                        </div>

                        <div class= "o_row">
                          <label for="employers_esi"/>
                          <field name="employers_esi"/>
                        </div>

                        <div class= "o_row">
                          <label for="esi_limit"/>
                          <field name="esi_limit"/>
                        </div>

                         <div class= "o_row">
                          <label for = "hra_reduces_basic_salary_percentage"/>
                          <field name = "hra_reduces_basic_salary_percentage"/>
                        </div>

                         <div class= "o_row">
                          <label for = "log_enable"/>
                          <field name = "log_enable"/>
                        </div>

                         <div class= "o_row">
                          <label for = "permanent_disability_thershold"/>
                          <field name = "permanent_disability_thershold"/>
                        </div>

                         <div class= "o_row">
                          <label for = "disability_less_than_thershold"/>
                          <field name = "disability_less_than_thershold"/>
                        </div>

                         <div class= "o_row">
                          <label for = "disability_greater_than_thershold"/>
                          <field name = "disability_greater_than_thershold"/>
                        </div>

                         <div class= "o_row">
                          <label for = "donations_for_funds_charities_factor"/>
                          <field name = "donations_for_funds_charities_factor"/>
                        </div>

                      </div>
                    </div>
                  </div>
                </div>
              </xpath>
            </field>
          </record>
        </odoo>